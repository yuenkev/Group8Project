@* Author: Sebastian Villafane Ramos
Description: Sign Up Page for our application*@

@{
    ViewData["Title"] = "Home Page";
}

@model Group8Project.Models.User

<style>
    td {
        padding: 3px 7px;
        text-align: right;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Sign Up</h1>
    <p>Please fill in this form to create an account.</p>
    <form asp-action="SignUpPage" method="post" style="border:1px solid #ccc">
        <div class="container">
            <hr>
            @* Displays all the error messages *@
            <div asp-validation-summary="All" class="text-danger" style="margin: auto; text-align: left; width: 30%"></div>
            <table style="margin: 0 auto">
                <tr>
                    <td><label asp-for="FName"><b>First name:</b></label></td>
                    <td><input asp-for="FName"></td>
                </tr>
                <tr>
                    <td><label asp-for="LName"><b>Last name:</b></label></td>
                    <td><input asp-for="LName"></td>
                </tr>
                <tr>
                    <td><label asp-for="Email"><b>Email:</b></label></td>
                    <td><input asp-for="Email"></td>
                </tr>
                <tr>
                    <td><label asp-for="PNumber"><b>Phone Number:</b></label></td>
                    <td><input asp-for="PNumber"></td>
                </tr>
                <tr>
                    <td><label asp-for="Password"><b>Password:</b></label></td>
                    <td><input asp-for="Password" type="password"></td>
                </tr>
            </table>
            <br />
            <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

            <div class="clearfix">
                <button type="submit" class="signupbtn">Sign Up</button>
            </div>
            <br />
        </div>
    </form>
    <br />
    <div class="btn btn-sm" style="border:1px solid #ccc">
        <a asp-action="LoginPage">Go To Login Page</a>
    </div>
</div>