@{
    ViewData["Title"] = "Home Page";
}

@model Group8Project.Models.User

<div class="text-center">
    <h1 class="display-4">Sign Up</h1>
    <p>Please fill in this form to create an account.</p>
    <form asp-action="SignUpPage" method="post" style="border:1px solid #ccc">
        <div class="container">
            <hr>
            @* Displays all the error messages *@
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="FName"><b>First name:</b></label>
            <input asp-for="FName">
            <br /><br />
            <label asp-for="LName"><b>Last name:</b></label>
            <input asp-for="LName">
            <br /><br />
            <label asp-for="Email"><b>Email</b></label>
            <input asp-for="Email">
            <br /><br />
            <label asp-for="PNumber"><b>Phone Number</b></label>
            <input asp-for="PNumber">
            <br /><br />
            <label asp-for="Password"><b>Password</b></label>
            <input asp-for="Password" type="password">
            <br /><br />
            <label asp-for="RePassword"><b>Repeat Password</b></label>
            <input asp-for="RePassword" type="password">
            <br /><br />
            <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

            <div class="clearfix">
                <button type="submit" class="signupbtn">Sign Up</button>
            </div>
            <br />
        </div>
    </form>
    <br />
    <div class="btn btn-sm" style="border:1px solid #ccc">
        <a asp-action="LoginPage">Go To Login Page</a>
    </div>
</div>

